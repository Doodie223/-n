<style>
    .description-group {
        display: flex;
        align-items: center;
    }

    .description-label {
        margin-right: 10px;
    }
</style>


<div class="container">
    <h1>Add New Room</h1>
    <form action="/admin/rooms/viewbyHotel/{{hotelId}}/addNew" method="POST" enctype="multipart/form-data">
        <div>
            <label for="roomtype_id">Room Type:</label>
            <select name="roomtype_id" id="roomtype_id" required>
                {{#each roomTypes}}
                <option value="{{this._id}}">{{this.type}}</option>
                {{/each}}
            </select>
        </div>
        <div>
            <label for="number">Room Number:</label>
            <input type="number" name="number" id="number" required min="0">
        </div>
        <div>
            <label for="acreage">Acreage:</label>
            <input type="number" name="acreage" id="acreage" required min="0">
        </div>
        <div>
            <label for="price">Price:</label>
            <input type="number" name="price" id="price" required min="0">
        </div>
        <div class="description-group">
            <label for="description">Description:</label>
            <textarea type="text" name="description" id="description" required min="0" rows="5" cols="50"
                style="resize: both;"></textarea>
        </div>
        <div>
            <label for="roomImages">Room Images:</label>
            <input type="file" name="roomImages" id="roomImages" multiple required>
        </div>
        <button type="submit">Add Room</button>
    </form>
</div>