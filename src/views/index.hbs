        <script>
            function jump() {
                const arrow = document.querySelector('.arrow-down');
                arrow.style.bottom = '20px'; // Thay đổi vị trí của mũi tên khi nhấn vào
                setTimeout(() => {
                    arrow.style.bottom = '70px'; // Reset lại vị trí sau một khoảng thời gian
                }, 490);
                window.scrollBy({
                    top: 830,
                    behavior: 'smooth'
                });
            }

            let isDragging = false;
            let startPosition = 0;
            let currentTranslate = 0;
            let prevTranslate = 0;
            let animationId = 0;
            const slider = document.getElementById('imageSlider');

            slider.addEventListener('mousedown', (e) => {
                isDragging = true;
                startPosition = e.clientX - slider.offsetLeft;
                prevTranslate = currentTranslate;
                slider.style.cursor = 'grabbing';
                animationId = requestAnimationFrame(animation);
            });

            slider.addEventListener('mousemove', (e) => {
                if (isDragging) {
                    const currentPosition = e.clientX - slider.offsetLeft;
                    currentTranslate = prevTranslate + currentPosition - startPosition;
                }
            });

            slider.addEventListener('mouseup', () => {
                cancelAnimationFrame(animationId);
                isDragging = false;
                const moved = currentTranslate - prevTranslate;
                if (moved < -100) {
                    // Move to next image
                    currentTranslate = prevTranslate - slider.clientWidth;
                } else if (moved > 100) {
                    // Move to previous image
                    currentTranslate = prevTranslate + slider.clientWidth;
                }
                setPosition();
                slider.style.cursor = 'grab';
            });

            slider.addEventListener('mouseleave', () => {
                cancelAnimationFrame(animationId);
                isDragging = false;
                slider.style.cursor = 'grab';
                setPosition();
            });

            function animation() {
                slider.style.transform = `translateX(${currentTranslate}px)`;
                if (isDragging) requestAnimationFrame(animation);
            }

            function setPosition() {
                slider.style.transform = `translateX(${currentTranslate}px)`;
            }
        </script>
